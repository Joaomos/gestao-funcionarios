<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="br.com.Joaomos.controller.LoginController"
	styleClass="login" hgap="15" vgap="15">
	
	<padding>
		<Insets left="40" right="40" top="40" bottom="40" />
	</padding>
	
	<columnConstraints>
		<ColumnConstraints minWidth="90" prefWidth="90"
			halignment="right" />
		<ColumnConstraints prefWidth="200" maxWidth="Infinity"
			hgrow="ALWAYS"/>
	</columnConstraints>

	<Label text="Seja Bem Vindo"
		styleClass="login-titulo"
		GridPane.columnIndex="0" GridPane.rowIndex="0"
		GridPane.columnSpan="2" GridPane.halignment="CENTER">
		
		<GridPane.margin>
			<Insets top="20" bottom="20" />
		</GridPane.margin>
	</Label>
		
	<Label text="E-mail:"
		styleClass="login-form-label"
		GridPane.columnIndex="0" GridPane.rowIndex="1"></Label>
	<TextField fx:id="campoEmail"
		styleClass="campo-email"
		GridPane.columnIndex="1" GridPane.rowIndex="1">
	
	</TextField>
		
	<Label text="Senha:"
		styleClass="login-form-label"
		GridPane.columnIndex="0" GridPane.rowIndex="2"></Label>
	<PasswordField fx:id="campoSenha"
		styleClass="campo-email"
		GridPane.columnIndex="1" GridPane.rowIndex="2">
	
	</PasswordField>

	<Button text="Entrar" 
		styleClass="login-form-botao"
		GridPane.columnIndex="0" GridPane.rowIndex="3"
		GridPane.columnSpan="2" GridPane.halignment="CENTER"
		onAction="#entrar">
		
		<GridPane.margin>
			<Insets top="15" bottom="10" />
		</GridPane.margin>
		
	</Button>
	
	<Label text="Ainda nÃ£o tem conta?"
		styleClass="login-form-label"
		GridPane.columnIndex="0" GridPane.rowIndex="4"
		GridPane.columnSpan="2" GridPane.halignment="CENTER">
		
		<GridPane.margin>
			<Insets top="0" bottom="0" />
		</GridPane.margin>	
	</Label>
		
	
	<Button text="Resgistrar-se" 
		styleClass="login-form-botao"
		GridPane.columnIndex="0" GridPane.rowIndex="5"
		GridPane.columnSpan="2" GridPane.halignment="CENTER"
		onAction="#abrirCadastro">
		
		<GridPane.margin>
			<Insets top="0" bottom="0" />
		</GridPane.margin>
		
	</Button>
	
</GridPane>